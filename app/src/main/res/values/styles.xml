<resources>
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#A6FF9999</item> <!-- 활성화 상태 테두리 색 -->
        <item name="boxBackgroundColor">#40FF9999</item> <!-- 배경 색 -->
        <item name="counterTextColor">@color/mainColor</item> <!-- 글자 수 카운터 글씨 색 -->
        <item name="android:textColorHint">#80000000</item> <!-- 힌트 글씨 색 -->
        <item name="colorPrimary">@color/mainColor</item> <!-- 주요 색 -->
    </style>
    <style name="TextInputStyleFromIntroducing" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/dark_gray</item> <!-- 활성화 상태 테두리 색 -->
        <item name="colorControlNormal">@color/dark_gray</item> <!-- 비활성화 상태 테두리 색 -->
        <item name="boxBackgroundColor">@color/editBackground</item> <!-- 배경 색 -->
        <item name="counterTextColor">@color/white</item> <!-- 글자 수 카운터 글씨 색 -->
        <item name="android:textColorHint">@color/editBackground</item> <!-- 힌트 글씨 색 -->
        <item name="colorPrimary">#3F51B5</item> <!-- 주요 색 -->
    </style>
    <style name="TextInputCounterStyleFromIntroducing">
        <item name="android:textAlignment">center</item> <!-- 가운데 정렬 -->
        <item name="android:layout_gravity">center_horizontal</item> <!-- 가로 가운데 정렬 -->
        <item name="android:textColor">@color/white</item> <!-- 필요하면 색상 변경 -->
    </style>

</resources>